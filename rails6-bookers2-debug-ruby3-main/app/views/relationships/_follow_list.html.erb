<% if users.exists? %>
  <% users.each do |user| %>
    <table>
      <thead>
        <tr>
          <td><%= user.name %></td>
          <td>フォロー数: <%= user.followings.count %></td>
          <td>フォロワー数: <%= user.followers.count %></td>
        </tr>
      </thead>
    </table>
  <% end %>
<% else %>
  <p>ユーザーはいません</p>
<% end %>